@using System.Security.Claims;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Деканат</title>
    <link href="~/css/main.css" rel="stylesheet" />
   
</head>
<body>
    <header>
        <a href="" class="logo">Деканат</a>
        <nav>
            <ul class="topmenu">
                <li><a asp-area="" asp-controller="Students" asp-action="Index">Студенты</a></li>
                <li><a asp-area="" asp-controller="Lecturers" asp-action="Index">Преподаватели</a></li>
                <li><a asp-area="" asp-controller="PassWorks" asp-action="Index">Результаты работ</a></li>
                <li><a asp-area="" asp-controller="Statements" asp-action="Index">Ведомости</a></li>
                @if (User.FindFirst(x => x.Type == ClaimsIdentity.DefaultRoleClaimType).Value == "Admin")
                {
                    <li>
                        <a href="" class="submenu-link">Администрирование</a>
                        <ul class="submenu">
                            <li><a asp-area="" asp-controller="Other" asp-action="WorksTypes">Типы работ</a></li>
                            <li><a asp-area="" asp-controller="Other" asp-action="Specialties">Специальности</a></li>
                            <li><a asp-area="" asp-controller="Other" asp-action="Subjects">Предметы</a></li>
                            <li><a asp-area="" asp-controller="Other" asp-action="Groups">Группы</a></li>
                        </ul>
                    </li>
                }
                <li><a asp-area="" asp-controller="Account" asp-action="Logout">Выход</a></li>
                
            </ul>
        </nav>
    </header>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - Будякова Ольга, ОНУ, Одесса, olga.dukhnevich@gmail.com</p>

        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>